mixin pagination(pagination)
    nav
        ul(class="pagination")
            if(pagination.currentPage > 1)
                li(class="page-item")
                    button(
                        class="page-link"
                        button-pagination= 1
                        ) <<
                li(class="page-item")
                    button(
                        class="page-link"
                        button-pagination= pagination.currentPage - 1
                        ) <

            - for(let i = (pagination.currentPage >= 3 ? (pagination.currentPage - 2) : 1); (i <= pagination.totalPage) && (i <= pagination.currentPage + 2); i++)
                li(class=`page-item ${pagination.currentPage == i ? "active": ""}`)
                    button(
                        class="page-link"
                        button-pagination = i
                        ) #{i}
            if(pagination.currentPage < pagination.totalPage)
                li(class="page-item")
                    button(
                        class="page-link"
                        button-pagination = pagination.currentPage + 1
                        ) >
                li(class="page-item")
                    button(
                        class="page-link"
                        button-pagination = pagination.totalPage
                        ) >>