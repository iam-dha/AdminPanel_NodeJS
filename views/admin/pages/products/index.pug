extends ../../layouts/default.pug 

block main 
    h1 Danh sach san pham 

    .card.mb-3 
        .card-header Bộ lọc và tìm kiếm
        .card-body 
            .row
                .col-6
                    each filter in filterStatus
                        button(
                            class= `btn btn-sm ml-1 btn-outline-success ${filter.class}`
                            button-status = filter.status
                        ) #{filter.name}
                .col-6
                    form(id="form-search")
                        .input-group 
                            input(
                                type= "text"
                                placeholder= "Key word"
                                name= "keyword"
                                class= "form-control"
                                value=keyword
                            )
                            .input-group-append 
                                button(
                                    class= "btn btn-success"
                                    type= "Submit"
                                ) Find

    .card.mb-3 
        .card-header Danh sách sản phẩm
            table.table.table-hover.table-sm 
                thead 
                    tr
                        th STT 
                        th Hình ảnh 
                        th Tiêu đề
                        th Giá
                        th Trạng Thái 
                        th Hành động

                tbody 
                    each item, index in products   
                        tr
                            td #{index + 1}
                            td 
                                img(
                                    src=item.thumbnail
                                    alt= "San pham 1"
                                    wigth= "100px"
                                    height= "70px"
                                )
                            td #{item.title}
                            td #{item.price}$
                            if (item.availabilityStatus == "In Stock")
                                td 
                                    a(href="#" class="badge bg-success") In Stock
                            else 
                                td 
                                    a(href="#" class="badge bg-danger") Low Stock
                            td
                                button(class="btn btn-warning btn-sm") Sua 
                                button(class="btn btn btn-danger btn-sm ms -1") Xoa
