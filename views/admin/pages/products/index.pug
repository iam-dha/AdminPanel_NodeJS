extends ../../layouts/default.pug 

block main 
    h1 Danh sach san pham 


    table.table.table-hover.table-sm 
        thead 
            tr
                th STT 
                th Hình ảnh 
                th Tiêu đề
                th Giá
                th Trạng Thái 
                th Hành động

        tbody 
            each item, index in products   
                tr
                    td #{index + 1}
                    td 
                        img(
                            src=item.thumbnail
                            alt= "San pham 1"
                            wigth= "100px"
                            height= "20px"
                        )
                    td #{item.title}
                    td #{item.price}$
                    if (item.availabilityStatus == "In Stock")
                        td 
                            a(href="#" class="badge bg-success") In Stock
                    else 
                        td 
                            a(href="#" class="badge bg-danger") Low Stock
                    td
                        button(class="btn btn-warning btn-sm") Sua 
                        button(class="btn btn btn-danger btn-sm ms -1") Xoa
